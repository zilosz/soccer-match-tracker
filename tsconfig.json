{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2023"],
    "allowJs": false,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "app/frontend"
    },
    {
      "path": "app/backend"
    },
    {
      "path": "packages/shared"
    }
  ]
}
